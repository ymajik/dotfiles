[user]
	name = 
	email = 
[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
[push]
	default = matching
[branch]
	autosetuprebase = always
[merge]
	ff = true
[rebase]
	autoStash = true
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ci = commit -v
	a = add .
	ca = commit -a
	clo = clone
	co = checkout
	log = log -M --decorate --graph --oneline
	sth = stash
	st = status
	br = branch
	rc = rebase --continue
	pur = pull --rebase
	dh = diff HEAD
